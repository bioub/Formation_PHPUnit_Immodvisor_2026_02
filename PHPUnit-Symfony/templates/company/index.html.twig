{% extends 'base.html.twig' %}

{% block title %}Liste des sociétés{% endblock %}

{% block body %}
    <h2>Liste des sociétés</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c in companies %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.name }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'id': c.id}) }}" class="btn btn-sm btn-primary">Afficher</a>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_company_update', {'id': c.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
