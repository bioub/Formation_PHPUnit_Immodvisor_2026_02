{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    <h2>Liste des contacts</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Société</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for c in contacts %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.firstname }}</td>
                <td>{{ c.lastname }}</td>
                <td>
                    {% if c.company %}
                        <a href="{{ path('app_company_show', {'id': c.company.id}) }}" class="btn btn-sm btn-outline-secondary">
                            {{ c.company.name }}
                        </a>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': c.id}) }}" class="btn btn-sm btn-primary">Afficher</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
