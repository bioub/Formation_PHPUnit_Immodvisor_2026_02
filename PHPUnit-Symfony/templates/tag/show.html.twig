{% extends 'base.html.twig' %}

{% block title %}Détails du tag{% endblock %}

{% block body %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Détails du tag</h2>
            <a href="{{ path('app_tag_index') }}" class="btn btn-sm btn-light">Retour à la liste</a>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">ID</div>
                <div class="col-sm-9 text-muted">{{ tag.id }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Nom</div>
                <div class="col-sm-9">{{ tag.name }}</div>
            </div>
        </div>
        <div class="card-footer d-flex gap-2">
            <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('tag/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
